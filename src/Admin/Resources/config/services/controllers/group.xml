<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="app.admin.group.resource_manager" class="AppBundle:Group">
            <tag name="radrest.entity_repository" />
            <tag name="radrest.resource_manager" resource="group" />
        </service>
        <service id="app.admin.group.authorization_checker" class="Admin\Security\DefaultAuthorizationChecker">
            <tag name="radrest.authorization_checker" resource="group" />
        </service>
        <service id="app.admin.group.form" class="App\Form\GroupType">
            <tag name="radrest.form" resource="group" />
        </service>
        <service id="app.admin.group.controller" class="Admin\Controller\GroupController">
            <tag name="radrest.controller" resource="group" />
            <argument type="service" id="knp_paginator" />
            <argument>admin_group</argument>
        </service>
    </services>
</container>
