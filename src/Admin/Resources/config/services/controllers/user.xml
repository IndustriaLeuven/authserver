<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="app.admin.user.repo" class="App\Doctrine\EntityRepository" factory-service="doctrine.orm.entity_manager" factory-method="getRepository">
            <argument>App\Entity\User</argument>
        </service>
        <service id="app.admin.user.resource_manager" class="App\Manager\SecuredResourceManager">
            <argument type="service" id="app.admin.user.repo" />
            <argument type="service" id="app.admin.default_authorization_checker" />
        </service>
        <service id="app.admin.user.form" class="App\Form\UserType">
            <argument type="service">
                <service class="Admin\Form\EventListener\UserTypeLocalFlagsEventListener">
                    <argument type="service" id="app.admin.default_authorization_checker" />
                </service>
            </argument>
        </service>
        <service id="app.admin.user.controller" class="Admin\Controller\UserController">
            <argument type="service" id="app.admin.user.resource_manager" />
            <argument type="service" id="app.admin.user.form" />
            <argument type="service" id="form.factory" />
            <argument type="service" id="knp_paginator" />
            <argument>admin_user</argument>
        </service>
    </services>
</container>
