<?xml version="1.0" ?>
<container xmlns="http://symfony.com/schema/dic/services" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">
    <services>
        <service id="app.admin.user.resource_manager" class="AppBundle:User">
            <tag name="radrest.entity_repository" />
            <tag name="radrest.resource_manager" resource="user" />
        </service>
        <service id="app.admin.user.authorization_checker" class="Admin\Security\DefaultAuthorizationChecker">
            <tag name="radrest.authorization_checker" resource="user" />
        </service>
        <service id="app.admin.user.form" class="App\Form\UserType">
            <argument type="service">
                <service class="Admin\Form\EventListener\UserTypeLocalFlagsEventListener">
                    <argument type="service" id="app.admin.user.authorization_checker" />
                </service>
            </argument>
            <tag name="radrest.form" resource="user" />
        </service>
        <service id="app.admin.user.controller" class="Admin\Controller\UserController">
            <tag name="radrest.controller" resource="user" />
            <argument type="service" id="knp_paginator" />
            <argument>admin_user</argument>
        </service>
    </services>
</container>
