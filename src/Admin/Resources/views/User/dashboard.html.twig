<div class="panel-body">
    <form action="{{ url('admin_user_gets') }}">
        <label for="dashboard_user_search" class="sr-only">Search for users</label>
        <div class="input-group">
            <input id="dashboard_user_search" type="search" name="q" placeholder="Search for users" class="form-control">
            <span class="input-group-btn">
                <button type="submit" class="btn btn-default">{{ icon('search') }}<span class="sr-only">Search users</span></button>
            </span>
        </div>
    </form>
</div>
<div class="list-group hidden-xs">
    {% for user in data %}
        <a class="list-group-item" href="{{ url('admin_user_get', { user: user.guid }) }}">{{ user.username }}</a>
    {% endfor %}
</div>
<div class="panel-body">
    <div class="btn-group">
        <a href="{{ url('admin_user_gets') }}" class="btn btn-primary hidden-xs">{{ icon('list-alt') }} Full list</a>
        <a href="{{ url('admin_user_new') }}" class="btn btn-default">{{ icon('plus') }} Create new</a>
    </div>
</div>
