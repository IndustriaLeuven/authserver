{% extends 'AdminBundle:User:skeleton.html.twig' %}
{% block radrest_content %}
    <div class="panel-heading">
        <h3 class="panel-title">Users</h3>
    </div>
    {{ form_start(batch_form, { action: url('admin_user_batch', { _params: app.request.query.all }), style: 'inline' }) }}
    <div class="table-responsive">
        <table class="table">
            <thead>
                <tr>
                    <th>Username</th>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for obj in data %}
                    <tr>
                        <td>
                            <label>
                                <input type="checkbox" name="admin_batch[subjects][{{ obj.id }}]" value="1" class="js--batch-checkbox">
                                {{ obj.username }}
                                {% if 'ROLE_USER' == obj.role %}
                                {% elseif 'ROLE_SUPER_ADMIN' == obj.role %}
                                    {{ label_danger('Super admin') }}
                                {% elseif 'ROLE_ADMIN' == obj.role %}
                                    {{ label_danger('Admin') }}
                                {% endif %}
                                {% if not obj.enabled %}
                                    {{ label('Disabled') }}
                                {% elseif not obj.accountNonLocked %}
                                    {{ label('Locked') }}
                                {% endif %}
                            </label>
                        </td>
                        <td>{{ obj.displayName }}</td>
                        <td>
                            {% if is_granted('ROLE_SCOPE_R_PROFILE_EMAIL') %}
                                {% if obj.primaryEmailAddress %}
                                    {{ obj.primaryEmailAddress.email }}
                                    {% if not obj.primaryEmailAddress.verified %}
                                        <span class="text-muted">(Not verified)</span>
                                    {% endif %}
                                {% else %}
                                    <span class="text-muted">(None)</span>
                                {% endif %}
                            {% else %}
                                <span class="text-muted">(Hidden)</span>
                            {% endif %}
                        </td>
                        <td>
                            {% include 'AdminBundle:User:cget_links.html.twig' with {obj: obj} only %}
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="panel-body text-center">
        <div class="pull-left js--batch-form collapse">
            {{ form_row(batch_form.action) }} {{ form_row(batch_form.submit) }}
            <span class="hidden">{{ form_row(batch_form.subjects) }}</span>
        </div>
        {{ knp_pagination_render(data, "", {"media_type": null}) }}
    </div>
    {{ form_end(batch_form) }}
{% endblock %}
{% block navigation_search_examples_dropdown %}
    <button type="button" class="btn btn-default dropdown-toggle" data-toggle="dropdown">
        <span class="caret"></span>
        <span class="sr-only">Toggle help</span>
    </button>
    <ul class="dropdown-menu" role="menu">
        <li><a href="{{ url('admin_user_gets', {q:'is:user'}) }}" data-property="user" data-remove-property="admin,superadmin" class="js-search-example">{{ icon('circle-o') }} Users</a></li>
        <li><a href="{{ url('admin_user_gets', {q:'is:admin'}) }}" data-property="admin" data-remove-property="user,superadmin" class="js-search-example">{{ icon('circle-o') }} Admins</a></li>
        <li><a href="{{ url('admin_user_gets', {q:'is:superadmin'}) }}" data-property="superadmin" data-remove-property="user,admin" class="js-search-example">{{ icon('circle-o') }} Super admins</a></li>
        <li class="divider" role="presentation"></li>
        <li><a href="{{ url('admin_user_gets', {q:'is:enabled'}) }}" data-property="enabled" data-remove-property="disabled" class="js-search-example">{{ icon('circle-o') }} Enabled</a></li>
        <li><a href="{{ url('admin_user_gets', {q:'is:disabled'}) }}" data-property="disabled" data-remove-property="enabled" class="js-search-example">{{ icon('circle-o') }} Disabled</a></li>
        <li class="divider" role="presentation"></li>
        <li>
            <span class="input-group menu-input">
                <label for="navigation_search_examples_username" class="input-group-addon">username:</label>
                <input id="navigation_search_examples_username" class="form-control js-search-example" data-prefix="username">
            </span>
        </li>
        <li>
            <span class="input-group menu-input">
                <label for="navigation_search_examples_name" class="input-group-addon">name:</label>
                <input id="navigation_search_examples_name" class="form-control js-search-example" data-prefix="name">
            </span>
        </li>
        <li class="divider" role="presentation"></li>
        <li>
            <span class="input-group menu-input">
                <label for="navigation_search_examples_email" class="input-group-addon">email:</label>
                <input id="navigation_search_examples_email" class="form-control js-search-example" data-prefix="email">
            </span>
        </li>
        <li class="divider" role="presentation"></li>
        <li>
            <div class="menu-input">
                <input type="submit" value="Search" class="btn btn-primary btn-block">
            </div>
        </li>
    </ul>
{% endblock %}
