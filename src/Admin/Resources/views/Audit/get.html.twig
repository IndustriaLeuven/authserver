{% extends 'VlRadRestBundle:Default:skeleton.html.twig' %}
{% block radrest_content %}
    <div class="panel-heading">
        <h3 class="panel-title">View</h3>
    </div>

    <div class="panel-body">
        <dl class="dl-horizontal">
            <dt>Target Object</dt><dd><a href="{{ url(controller.route('target'), {id: id}) }}">{{ data.objectClass }}@{{ data.objectId }}</a></dd>
            <dt>Action</dt><dd>{{ data.action }}</dd>
            <dt>Version</dt><dd>{{ data.version }}</dd>
            <dt>Timestamp</dt><dd>{{ data.loggedAt|date }}</dd>
            <dt>Editor</dt><dd>{{ data.username }}</dd>
        </dl>
    </div>
    <div class="table-responsive">
        <table class="table">
            <thead>
            <tr><th>Name</th><th>New data</th></tr>
            </thead>
            <tbody>
            {% for name,value in data.data %}
                <tr>
                    <td>{{ name }}</td>
                    {% if value is iterable %}
                        <td>
                            {% for k,v in value if v|length > 0 %}
                                <b>{{ k }}:</b>
                                    {% if v is iterable %}
                                        {{ v|join }}
                                    {% else %}
                                        {{ v|radrest_object_stringify }}
                                    {% endif %}
                                    <br>
                            {% endfor %}
                        </td>
                    {% else %}
                        <td>{{ value|radrest_object_stringify }}</td>
                    {% endif %}
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
