{% extends '::base.html.twig' %}
{% block body %}
<div class="container-fluid">
    <div class="row">
        <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h1 class="panel-title">{{ icon('user') }} Users</h1>
                </div>
                {{ render(controller('app.admin.user.controller:dashboardAction')) }}
                <div class="panel-body">
                    <a href="{{ url('admin_user_gets') }}" class="btn btn-primary">{{ icon('list-alt') }} Full list</a>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h1 class="panel-title">{{ icon('group') }} Groups</h1>
                </div>
                {{ render(controller('app.admin.group.controller:dashboardAction')) }}
                <div class="panel-body">
                    <a href="{{ url('admin_group_gets') }}" class="btn btn-primary">{{ icon('list-alt') }} Full list</a>
                </div>
            </div>
        </div>
        <div class="col-xs-12 col-sm-6 col-md-4">
            <div class="panel panel-default">
                <div class="panel-heading">
                    <h1 class="panel-title">{{ icon('cube') }} OAuth Applications</h1>
                </div>
                {{ render(controller('app.admin.oauth.client.controller:dashboardAction')) }}
                <div class="panel-body">
                    <a href="{{ url('admin_oauth_client_gets') }}" class="btn btn-primary">{{ icon('list-alt') }} Full list</a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
