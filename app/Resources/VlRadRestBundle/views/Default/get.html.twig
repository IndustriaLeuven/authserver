{% extends 'VlRadRestBundle:Default:skeleton.html.twig' %}
{% block radrest_content %}
    <div class="panel-heading">
        <h3 class="panel-title">View</h3>
    </div>

    <div class="panel-body">
        <dl class="dl-horizontal">
            {% for key in data|radrest_object_keys %}
                <dt>{{ key|humanize }}</dt>
                {% if attribute(data, key)|radrest_object_stringify == '(Array)' %}
                    <dd>
                        {% for k,elem in attribute(data, key) %}
                            {% if k is not same as(loop.index0) %}
                                <b>{{ k }}:</b>
                            {% endif %}
                            {{ elem|radrest_object_stringify }}<br>
                        {% else %}
                            <span class="text-muted">None</span>
                        {% endfor %}
                    </dd>
                {% else %}
                    <dd>{{ attribute(data, key)|radrest_object_stringify }}</dd>
                {% endif %}
            {% endfor %}
        </dl>
    </div>
{% endblock %}
